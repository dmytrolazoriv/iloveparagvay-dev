{{ 'section-discover.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="discover page-width section-{{ section.id }}-padding section-{{ section.id }}">
    <div class="discover__top top-discover">
        <div class="top-discover__upper">
            <h2 class="top-discover__title">Discover</h2>
            <a href="#" class="top-discover__button">All menu</a>
        </div>
        <h3 class="top-discover__subtitle">new wow-flavors</h3>
    </div>
    <div class="discover__items">
            <div class="discover__item item-discover item-discover_small">
                <div class="item-discover__image">
                    <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/dessert.png?v=1711111701" alt="">
                </div>
                <h4 class="item-discover__name">Desserts</h4>
            </div>
            <div class="discover__item item-discover item-discover_big">
                <div class="item-discover__image">
                    <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/traditional.png?v=1711111701" alt="">
                </div>
                <h4 class="item-discover__name">Traditionals</h4>
            </div>
            <div class="discover__item item-discover item-discover_small">
                <div class="item-discover__image">
                    <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/drinks.png?v=1711111701" alt="">
                </div>
                <h4 class="item-discover__name">Drinks</h4>
            </div>
    </div>
</div>

