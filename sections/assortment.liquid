{{ 'section-assortment.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="assortment page-width section-{{ section.id }}-padding section-{{ section.id }}">
    <div class="assortment__inner">
        <div class="assortment__head">
            <h3 class="assortment__subtitle">Choose the best Paraguayan products</h3>
            <h2 class="assortment__title">in our online store</h2>
        </div>
        <div class="assortment__items">
            <div class="assortment__row">
                <div class="assortment__column assortment__column_wide">
                    <div class="assortment__item item-assortment">
                        <div class="item-assortment__image">
                            <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/Card12.png?v=1713364915" alt="">
                        </div>
                        <h4 class="item-assortment__title">Traditional</h4>
                    </div>
                </div>
                <div class="assortment__column assortment__column_thin">
                                        <div class="assortment__item item-assortment">
                        <div class="item-assortment__image">
                            <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/Card3.png?v=1713364915" alt="">
                        </div>
                        <h4 class="item-assortment__title">Pastas & flours</h4>
                    </div>
                </div>
                <div class="assortment__column assortment__column_thin">
                                        <div class="assortment__item item-assortment">
                        <div class="item-assortment__image">
                            <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/Card132.png?v=1713364917" alt="">
                        </div>
                        <h4 class="item-assortment__title">Sweets</h4>
                    </div>
                </div>
            </div>
            <div class="assortment__row assortment__row_reverse">
                <div class="assortment__column assortment__column_thin">
                    <div class="assortment__item item-assortment">
                        <div class="item-assortment__image">
                            <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/Card55.png?v=1713364915" alt="">
                        </div>
                        <h4 class="item-assortment__title">Drinks</h4>
                    </div>
                </div>
                <div class="assortment__column assortment__column_thin">
                    <div class="assortment__item item-assortment">
                        <div class="item-assortment__image">
                            <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/Card565.png?v=1713364915" alt="">
                        </div>
                        <h4 class="item-assortment__title">Merchandise</h4>
                    </div>
                </div>
                <div class="assortment__column assortment__column_wide">
                    <div class="assortment__item item-assortment">
                        <div class="item-assortment__image">
                            <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/Card57.png?v=1713364916" alt="">
                        </div>
                        <h4 class="item-assortment__title">Gift boxes</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        
{% schema %}
    {
        "name": "Assortment",
        "settings": [
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 32
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 32
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_mobile_heading"
        },
        {
            "type": "range",
            "id": "padding_top_mobile",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 24
        },
        {
            "type": "range",
            "id": "padding_bottom_mobile",
            "min": 0,
            "max": 200,
            "step": 2,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 24
        }
        ],
        "blocks": [
            {
            "name": "Image block",
            "type": "image",
            "settings": [
            {
                "type": "header",
                "content": "Image settings"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
            ]
            },
            {
            "name": "Info block",
            "type": "info",
            "settings": [
                {
                "type": "header",
                "content": "Text settings"
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "Subtitle",
                "default": "Become our guest and try"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Paraguayan dishes"
            },
            {
                "type": "header",
                "content": "Button settings"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button text",
                "default": "Reserve a table"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button link"
            }
            ]
            }
        ],
        "presets": [
        {
            "name": "Assortment",
            "settings": {
            },
            "blocks": [
            {
                "type": "info",
                "settings": {
                }
            },
            {
                "type": "image",
                "settings": {
                }
            }
            ]
        }
        ],
        "enabled_on": {
        "templates": ["*"]
        }
    }
    {% endschema %}