{{ 'custom-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="custom-footer">
    <div class="custom-footer__main page-width section-{{ section.id }}-padding section-{{ section.id }}">
        <div class="custom-footer__body">
            {% comment %} <div class="custom-footer__decor">
                <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/footer-background.svg?v=1713625997" alt="">
            </div> {% endcomment %}
            <div class="custom-footer__middle middle-custom-footer">
                <div class="middle-custom-footer__wrapper">
                    <div class="middle-custom-footer__logo">
                        <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/footer-logo.png?v=1713535523" alt="">
                    </div>
                    <div class="middle-custom-footer__content">
                        <div class="middle-custom-footer__reserve-info">
                            <a href="" class="middle-custom-footer__button button yellow-light">Reserve a table</a>
                            <ul class="middle-custom-footer__menu menu-footer">
                                <li class="menu-footer__item">Shop</li>
                                <li class="menu-footer__item">services</li>
                                <li class="menu-footer__item">Contacts</li>
                                <li class="menu-footer__item">Menu</li>
                            </ul>
                        </div>
                        <div class="middle-custom-footer__schedule footer-schedule">
                            <address class="footer-schedule__address">43-16 Greenpoint Ave, Sunnyside, New york</address>
                            <div class="footer-schedule__time schedule-time">
                                <p class="schedule-time__block">Mon - Fri: <time datetime="2018-07-07T20:00:00">11 - 22</time></p>
                                <p class="schedule-time__block">Sat: <time datetime="2018-07-07T20:00:00">10 - 23</time></p>
                                <p class="schedule-time__block">sun: <time datetime="2018-07-07T20:00:00">10 - 22</time></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="middle-custom-footer__wrapper">
                    <div class="middle-custom-footer__map">
                        <img src="https://cdn.shopify.com/s/files/1/0569/6241/6736/files/map.png?v=1713535524" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="custom-footer__copyrights">
            <p>Â© 2024   I   Love Paraguay Restaurant</p>
       </div>
    </div>
</footer>

